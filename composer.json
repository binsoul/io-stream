{
    "name": "binsoul/io-stream",
    "description": "Stream implementations and decorators",
    "keywords": [
        "io",
        "stream"
    ],
    "homepage": "https://github.com/binsoul/io-stream",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Mößler",
            "email": "code@binsoul.de",
            "homepage": "https://github.com/binsoul",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.6.0",
        "binsoul/common": "~1.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "fabpot/php-cs-fixer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\IO\\Stream\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\IO\\Stream\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": [
            "php-cs-fixer fix src",
            "php-cs-fixer fix tests"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
